<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_grade_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:background="@color/gray_light"
        android:gravity="center"
        android:hint="Nota 1"
        android:inputType="number|numberDecimal|numberSigned"
        android:maxLength="2"
        android:padding="20dp"
        android:text="" />

    <EditText
        android:id="@+id/edit_grade_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:background="@color/gray_light"
        android:gravity="center"
        android:hint="Nota 2"
        android:inputType="number|numberDecimal|numberSigned"
        android:maxLength="2"
        android:padding="20dp"
        android:text="" />

    <EditText
        android:id="@+id/edit_grade_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_grade_one"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:background="@color/gray_light"
        android:gravity="center"
        android:hint="Nota 3"
        android:inputType="number|numberDecimal|numberSigned"
        android:maxLength="2"
        android:padding="20dp"
        android:text="" />

    <EditText
        android:id="@+id/edit_grade_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_grade_two"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:background="@color/gray_light"
        android:gravity="center"
        android:hint="Nota 3"
        android:inputType="number|numberDecimal|numberSigned"
        android:maxLength="2"
        android:padding="20dp"
        android:text="" />

    <EditText
        android:id="@+id/edit_number_of_faults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_grade_three"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/gray_light"
        android:gravity="center"
        android:hint="NÃºmero de faltas"
        android:inputType="number|numberDecimal|numberSigned"
        android:maxLength="2"
        android:padding="20dp"
        android:text="" />

    <Button
        android:id="@+id/bt_calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_number_of_faults"
        android:layout_margin="30dp"
        android:backgroundTint="@color/gray_dark"
        android:padding="20dp"
        android:text="Calcular"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_calculate"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>